<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/laRoot"

    android:gravity="center"
    android:padding="40dp"
    android:background="@color/myBlackTrans"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_categ_type">

    <LinearLayout
        android:background="@drawable/rounded_gray"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:background="@drawable/rounded_top_black"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Выберите категории"
            style="@style/TVmdSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:id="@+id/laAny"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:background="@drawable/item_online"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >

            <ToggleButton
                android:id="@+id/toggAny"

                android:clickable="false"
                android:textOff="@null"
                android:textOn="@null"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cheb_pink"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:layout_toLeftOf="@id/togg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:textColor="@color/myGray"
                android:text="Неважно"
                style="@style/TVsmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laNew"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:background="@drawable/item_online"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >

            <ToggleButton
                android:id="@+id/toggNew"

                android:clickable="false"
                android:textOff="@null"
                android:textOn="@null"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cheb_pink"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:layout_toLeftOf="@id/togg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:textColor="@color/myGray"
                android:text="Новый"
                style="@style/TVsmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laPostoyan"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:background="@drawable/item_online"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >

            <ToggleButton
                android:id="@+id/toggPostoyan"

                android:clickable="false"
                android:textOff="@null"
                android:textOn="@null"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cheb_pink"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:layout_toLeftOf="@id/togg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:textColor="@color/myGray"
                android:text="Постоянный"
                style="@style/TVsmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/laVip"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:background="@drawable/item_online"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >

            <ToggleButton
                android:id="@+id/toggVip"

                android:clickable="false"
                android:textOff="@null"
                android:textOn="@null"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cheb_pink"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <TextView
                android:layout_toLeftOf="@id/togg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="left|center_vertical"
                android:textColor="@color/myGray"
                android:text="Vip"
                style="@style/TVsmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>