<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/myLightGray"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recAnalitics"


        android:padding="4dp"
        android:clipToPadding="false"
        android:layout_above="@id/btnNewFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/btnNewFilter"

        android:layout_alignParentBottom="true"
        android:fontFamily="@font/monsemibold"
        android:textAllCaps="false"
        android:textColor="@color/sel_white"
        android:background="@drawable/btn_pink"
        android:text="Новый Фильтр"
        android:layout_width="match_parent"
        android:layout_height="32dp" />

</RelativeLayout>