<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">


        <RelativeLayout
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <EditText
                android:id="@+id/etSearch"

                android:paddingRight="98dp"
                android:paddingLeft="6dp"
                android:background="@drawable/et_gray"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                style="@style/IconMWhite"
                android:text="@string/fawSearch"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_only_right_corners"
                android:layout_width="32dp"
                android:layout_height="32dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




    <ScrollView
        android:id="@+id/scrollAllUser"

        android:background="@color/myLightGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbarThumbVertical="@drawable/scroll_vertical">

        <LinearLayout
            android:id="@+id/laForAllClients"

            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical">




        </LinearLayout>

    </ScrollView>

</LinearLayout>